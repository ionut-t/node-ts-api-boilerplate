{
	"name": "node-ts-api-boilerplate",
	"version": "0.1.0",
	"description": "Boilerplate for REST APIs with Node, Express, Mongo and TypeScript",
	"repository": "https://github.com/ionut-t/node-ts-api-boilerplate.git",
	"author": "Ionut Traistaru <ionut.m.traistaru@gmail.com>",
	"license": "MIT",
	"scripts": {
		"start": "npm run watch-node",
		"serve": "node dist/server.js",
		"watch-node": "nodemon dist/server.js",
		"build": "npm run build-ts && npm run lint",
		"build-ts": "tsc",
		"watch-ts": "tsc -w",
		"lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^8.1.0",
		"express": "^4.17.1",
		"express-validator": "^6.2.0",
		"mongoose": "^5.7.1",
		"morgan": "^1.9.1",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"@types/compression": "^1.0.1",
		"@types/cors": "^2.8.6",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^4.17.1",
		"@types/mongodb": "^3.3.2",
		"@types/mongoose": "^5.5.17",
		"@types/morgan": "^1.7.37",
		"@types/node": "^12.7.5",
		"@types/shelljs": "^0.8.5",
		"@typescript-eslint/eslint-plugin": "^2.3.0",
		"@typescript-eslint/parser": "^2.3.0",
		"eslint": "^6.4.0",
		"nodemon": "^1.19.2",
		"shelljs": "^0.8.5",
		"ts-node": "^8.4.1",
		"typescript": "^3.6.3"
	}
}
